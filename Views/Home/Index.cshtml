@model IEnumerable<AppMVC.Models.Login>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1 class="display-4">Login</h1>

</div>


<div class ="row">
    <div class="col-sm-12">
        <div class="float-right">
            <a asp-action="Crear" asp-controller="Home" class="btn btn-success">Añadir Login</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card border">
            <div class="card-header">
                <h3 class="text-center">Lista de usuarios</h3>
            </div>
            <div class="card-body">
                <div class="table responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(n => n.Link)</th>
                                    <th>@Html.DisplayNameFor(n => n.Usuario)</th>
                                    <th>@Html.DisplayNameFor(n => n.Contraseña)</th>
                                    <th>Detalles</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(n => item.Link)</td>
                                        <td>@Html.DisplayFor(n => item.Usuario)</td>
                                        <td>@Html.DisplayFor(n => item.Contraseña)</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>


                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
